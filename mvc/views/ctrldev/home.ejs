<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="css/css-b/style3.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Arimo:ital,wght@0,400..700;1,400..700&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <div>
            <a href="/home"><span class="material-symbols-outlined">arrow_back</span></a> 
        </div>
        <div>
           
            <div class="menu-icon">
                <span class="material-symbols-outlined" onclick="openNav()">menu</span>
            </div>
        </div>
    </header>
    <main>
        <div class="search-bar">
            <input type="text" placeholder="Pesquisar..." id="search-bar">
        </div>
        <section class="event-section">
            <div class="event" id="evento">
                <figure>
                    <a href="/eventos/evento">
                    <img src="../images/eventos.png" alt="Eventos">
                    </a>
                </figure>
                <p></p>
            </div>
            
            <div class="event" id="turismo">
                <figure>
                    
                    <img src="../images/turismo.jpg" alt="Turismo" onclick="redirectToPontos('turistico')">
                 
                </figure>
                <p></p>
            </div>
            <div class="event" id="restaurante">
                <figure>
                    <img src="../images/comida.jpg"  alt="Comida" onclick="redirectToPontos('restaurante')">
                </figure>
                <p></p>
            </div>
            <div class="event" id="loja">
                <figure>
                    <img src="../images/loja.png" alt="Loja" onclick="redirectToPontos('loja')">
                </figure>
                <p></p>
            </div>
            <div class="event" id="esporte">
                <figure>
                    <img src="../images/esporte.png" alt="Esporte" onclick="redirectToPontos('esporte')">
                </figure>
                <p></p>
            </div>
            <div class="event" id="alugavel">
                <figure>
                    <img src="../images/alugavel.png" alt="Alugável" onclick="redirectToPontos('alugavel')">
                </figure>
                <p></p>
            </div>
            <div class="event" id="igreja">
                <figure>
                    <img src="../images/igreja.png" alt="Igreja" onclick="redirectToPontos('igreja')">
                </figure>
                <p></p>
            </div>
            <div class="event" id="saude">
                <figure>
                    <img src="../images/saude.png" alt="Saúde" onclick="redirectToPontos('saude')">
                </figure>
                <p></p>
            </div>
            <div class="event" id="escola">
                <figure>
                    <img src="../images/escola.png" alt="Escola" onclick="redirectToPontos('escola')">
                </figure>
                <p></p>
            </div>
        </section>
    </main>
    <footer></footer>
    <div id="mySidenav" class="sidenav">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <a href="/evento">Evento</a>
        <a href="/confirmacao">Confirmacao</a>
        <a href="/ponto">Ponto</a>
        <a href="/usuario">Usuario</a>
        <a href="/logout"><button class="btn btn-light m-5">Sair</button></a>
    </div>
    <script>
        function openNav() {
            document.getElementById("mySidenav").style.width = "250px";
        }

        function closeNav() {
            document.getElementById("mySidenav").style.width = "0";
        }

        document.getElementById('search-bar').addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();
            const events = document.querySelectorAll('.event');
            let matchFound = false;

            events.forEach(event => {
                if (event.id.toLowerCase() === searchTerm) {
                    matchFound = true;
                }
            });

            if (matchFound) {
                events.forEach(event => {
                    if (event.id.toLowerCase() === searchTerm) {
                        event.style.display = 'flex';
                    } else {
                        event.style.display = 'none';
                    }
                });
            } else {
                events.forEach(event => {
                    event.style.display = 'flex';
                });
            }
        });
        function redirectToPontos(tipo) {
            window.location.href = `/pontos/${tipo}`;
        }
    </script>
</body>
</html>
