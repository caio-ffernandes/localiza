<body class="precisa">
    <header>
        <div>
            <a href="/home"><span class="material-symbols-outlined">arrow_back</span></a> 
    </div>
    <div>
        <figure class="ima">
            <img class="gem" src="images/Lgrande.png" alt="">
        </figure>
    </div>
    </header>
    <main>
    <div class="contaner">
        <div class="ccontainer">
            <% pontos.forEach(ponto => { %>
                <div class="loop">
                   <div class="col">
                        
                        <h6><%= ponto.nome %></h3>
                    <div class="ponto-cardpo">
                        <p><strong>Endere√ßo:</strong> <%= ponto.rua %>, <%= ponto.num %>, <%= ponto.bairro %></p>
                        <p><strong>Telefone:</strong> <%= ponto.telefone %></p>
                        <p><strong>CEP:</strong> <%= ponto.cep %></p>
                        <figure class="ima">
                        <img src="/images/upload/<%= ponto.foto %>" alt="<%= ponto.nome %>" class="gem">
                        </figure>
        
                    </div>
                </div>
                </div>
            <% }) %>
        </div>
    </div>
</main>
    <footer></footer>
